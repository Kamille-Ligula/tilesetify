{
  "name": "Tilesetify",
  "version": "2.0.1",
  "description": "A program to turn a 2D video game map into a tileset.",
  "main": "main.js",
  "scripts": {
    "start": "electron main.js",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.electron.tilesetify",
    "mac": {
      "category": "Utility"
    },
    "win": {
      "target": "nsis"
    }
  },
  "keywords": [
    "Tileset"
  ],
  "author": "Samuel Luc",
  "license": "GNU General Public License v3.0",
  "devDependencies": {
    "electron": "^16.0.7",
    "electron-builder": "^22.14.5"
  },
  "dependencies": {
    "fs": "0.0.1-security",
    "jimp": "^0.16.1",
    "path": "^0.12.7"
  }
}
